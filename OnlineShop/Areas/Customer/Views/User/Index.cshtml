@model IEnumerable<OnlineShop.Models.ApplicationUser>
@{
    ViewData["Title"] = "Index";
}
<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">User List</h2>
    </div>
    <div class="col-6">
        <a asp-action="Create" class="btn btn-primary">New User</a>
    </div>
</div>
<br />
<div>
    <table class="table table-stropped border text-center">
        <thead>
            <tr class="table-info">
                <th>Name</th>
                <th>UserName</th>

                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
 @foreach (var item in Model)

            {
                <tr>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.UserName</td>
                    @if (item.LockoutEnd > DateTime.Now && item.LockoutEnd != null)
                    {
                        <td>Inactive</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Active" asp-controller="User" class="btn btn-success btn-sm" asp-route-id="@item.Id"><i class='fas fa-edit'></i></a>
                            </div>
                            <div class="btn-group">
                                <a asp-action="PermanentDelete" asp-controller="User" class="btn btn-danger btn-sm" asp-route-id="@item.Id"><i class='fas fa-trash-alt'></i></a>
                            </div>
                        </td>


                    }
                    else
                    {
                        <td>Active</td>
                        <td>
                            <a asp-action="Edit" asp-controller="User" class="btn btn-success btn-sm" asp-route-id="@item.Id"><i class='fas fa-edit'></i></a>
                            <a asp-action="Detail" asp-controller="User" class="btn btn-info btn-sm" asp-route-id="@item.Id"><i class='fas fa-th-list'></i></a>
                            <a asp-action="Delete" asp-controller="User" class="btn btn-danger btn-sm" asp-route-id="@item.Id"><i class='fas fa-trash-alt'></i></a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
