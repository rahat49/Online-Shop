@model OnlineShop.Areas.Admin.Models.RolesUserVm
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-primary">Assign Role</h1>
<form asp-action="Assign" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h1 class=" text-danger">@ViewBag.msg</h1>
   
        <div class="form-group row mt-2 ">
            <div class="col-2">
                <label asp-for="UserId"></label>
            </div>
            <div class="col-5">
                <select asp-for="UserId" asp-items="@ViewBag.UserId" class="form-control"></select>
                @*<input asp-for="ProductTypeId" class="form-control" />*@
            </div>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="form-group row  mt-2">
            <div class="col-2">
                <label asp-for="RoleId"></label>
            </div>
            <div class="col-5">
                <select asp-for="RoleId" asp-items="@ViewBag.RoleId" class="form-control"></select>
            </div>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
        
    </div>

    <div class="form-group mt-2">
        <input type="submit" class="btn btn-primary" value="Assign" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>

</form>
