@{
    ViewData["Title"] = "Index";
}
<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Roles</h2>
    </div>
    <div class="col-6">
        <a asp-action="Create" class="btn btn-primary">New Role</a>
    </div>
</div>
<br />
<div>
    <table class="table table-stropped border text-center">
        <thead>
            <tr class="table-info">
                <th>Name</th>
               
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
           
                    @foreach (var item in ViewBag.Roles)

                    {
                    <tr>
                        <td>@item.Name </td>
                        <td>
                            <a asp-action="Edit" asp-controller="Role" class="btn btn-success btn-sm" asp-route-id="@item.Id"><i class='fas fa-edit'></i></a>
                            @*<a asp-action="Detail" asp-controller="Role" class="btn btn-info btn-sm" asp-route-id="@item.Id"><i class='fas fa-th-list'></i></a>*@
                            <a asp-action="Delete" asp-controller="Role" class="btn btn-danger btn-sm" asp-route-id="@item.Id"><i class='fas fa-trash-alt'></i></a>
                        </td>


                    </tr>
                    }
               
        </tbody>
    </table>
</div>
