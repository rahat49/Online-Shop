@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-primary">Delete Role</h1>
<form asp-action="Delete" method="post" >
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @* <h1 class="alert alert-warning">@ViewBag.message</h1>*@
        <h3 class="text-danger">Do you want to Delete?</h3>
        <div class="form-group row">
            <div class="col-2 ">
                <label>Role Name</label>
            </div>
            <input type="hidden" value="@ViewBag.id" name="id" />
            <div class="col-5">
                <input id="name" name="name" value="@ViewBag.name" readonly="readonly" class="form-control" required />
            </div>

        </div>

    </div>

    <div class="form-group mt-2">
        <input type="submit" class="btn btn-primary" value="Delete" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>

</form>