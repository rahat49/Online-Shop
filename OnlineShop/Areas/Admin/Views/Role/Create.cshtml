@{
    ViewData["Title"] = "Create";
}

<h1 class="text-primary">Add New Role</h1>
<form asp-action="Create" method="post" id="user-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @* <h1 class="alert alert-warning">@ViewBag.message</h1>*@
        <h3 class="text-danger">@ViewBag.msg</h3>
        <div class="form-group row">
            <div class="col-2 ">
                <label>Role Name</label>
            </div>
            <div class="col-5">
                <input id="name" name="name" value="@ViewBag.name" class="form-control" required />
            </div>
            
        </div>

    </div>

    <div class="form-group mt-2">
        <input type="submit" class="btn btn-primary" value="Save" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>

</form>