@model OnlineShop.Models.ProductTypes
@{
    ViewData["Title"] = "Details";
}


<h1 class="text-primary">Product Types Details</h1>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductType"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductType" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="ProductType" class="text-danger"></span>
        </div>

        <div class="form-group">
            
            <a asp-action="Edit" asp class="btn btn-primary" asp-route-id="@Model.Id">Edit</a>
            <input type="submit" asp class="btn btn-success" value="Back To List" />
        </div>
    </div>
</form>

