@model OnlineShop.Models.SpecialTag
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-primary">Create Special Tag Name</h1>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SpecialTagName"></label>
            </div>
            <div class="col-5">
                <input asp-for="SpecialTagName" class="form-control" />
            </div>
            <span asp-validation-for="SpecialTagName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
